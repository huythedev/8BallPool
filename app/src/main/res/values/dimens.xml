<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        My device: Xiaomi Mi A1
        My android version: 9

        Use the Landscape mode
        In Landscape mode, the values X and Y are inverted

        Portrait:
        Device Width: X => 1080
        Device Height: Y => 1920

        Landscape:
        Device Width: X => 1920
        Device Height: Y => 1080

        Find the dimensions of your device in MainActivity ( DEBUG )

        Add the android:background="@color/colorAlphaWhite" in layout ( RelativeLayout ) to help the adjusts
    -->

    <!-- Board (Redmi Note 11T Pro Plus landscape) -->
    <dimen name="boardWidth" tools:ignore="PxUsage">2460px</dimen>
    <dimen name="boardHeight" tools:ignore="PxUsage">1080px</dimen>
    <dimen name="boardMarginBottom" tools:ignore="PxUsage">0.0099</dimen>

    <!-- Canvas (scaled proportionally) -->
    <dimen name="canvasWidth" tools:ignore="PxUsage">2200px</dimen>
    <dimen name="canvasHeight" tools:ignore="PxUsage">900px</dimen>
    <dimen name="canvasMarginTop" tools:ignore="PxUsage">90px</dimen>

    <!-- Buttons (scaled proportionally) -->
    <dimen name="buttonWidth" tools:ignore="PxUsage">350px</dimen>
    <dimen name="buttonHeight" tools:ignore="PxUsage">90px</dimen>
    <dimen name="buttonNormalMarginStart" tools:ignore="PxUsage">220px</dimen>
    <dimen name="buttonCloseMarginEnd" tools:ignore="PxUsage">210px</dimen>
    <dimen name="buttonTrickshotSecondLineMarginEnd" tools:ignore="PxUsage">210px</dimen>
</resources>
